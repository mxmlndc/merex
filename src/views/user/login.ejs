<!DOCTYPE html>
<html lang="en">
    <!--Head-->    
    <%- include('../partials/head') %>
<body>
    <main class="l-main">
        <div class="login">
            <div class="login__content">
                <!--
                <div class="login__img">
                    <img src="/img/login.png" alt="">
                </div>    
                -->
                <!--Login-->
                <div class="login__forms">
                    <% if (messages.error) { %> 
                        <%= messages.error %>
                    <% } %>  
                    <form class="login__registre" id="login-in" method="POST" action="/login">
                        <h1 class="login__title">INGRESAR</h1>

                        <div class="login__box">
                            <label for="email"><i class='bx bx-user login__icon'></i></label>
                            <input type="email" name="email" id="email" placeholder="Email" class="login__input" aria-describedby="emailHelp">
                        </div>

                        <div class="login__box">
                            <label for="password"><i class='bx bx-lock login__icon'></i></label>
                            <input type="password" name="password" id="password" placeholder="Password" class="login__input">
                        </div>

                        <a href="#" class="login__forgot">Olvidaste la clave?</a>

                        <button type="submit" class="login__button">Ingresar</button>    
                        
                    </form>
                    <div>
                        <span class="login__account">No ten√©s cuenta?</span>
                        <a href="/register"><span class="login__signin" id="sign-up">Crear</span></a>
                    </div>
                </div>
            </div>
        </div>
        
        <!--Footer-->
        <%- include('../partials/footer') %>
    </main>
    

    <script src="/js/main.js"></script>
</body>
</html>